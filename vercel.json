{
  "version": 2,
  "devCommand": "npm run start -- --port 4200",
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["src/mocks/db.json"] }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/empresas" }
    }
  ],
  "routes": [
    { "src": "/empresas(.*)", "dest": "/api/server.js" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
